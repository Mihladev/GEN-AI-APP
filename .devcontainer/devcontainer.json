{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "Task/FE/app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
   "postCreateCommand": [
  "echo 'Installing Python dependencies...'",
  "pip install --upgrade pip",  // Ensure pip is the latest version
  "if [ -f Task/requirements.txt ]; then pip install -r Task/requirements.txt; else echo 'requirements.txt not found'; fi",  // Adjusted path
  "pip install --user streamlit",  // Install Streamlit explicitly
  "echo 'âœ… Packages installed and Requirements met'"

  ],
  "postAttachCommand": "streamlit run Task/FE/app.py --server.enableCORS false --server.enableXsrfProtection false",
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}
